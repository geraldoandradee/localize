<extension version="3.3" type="template" client="site" method="upgrade">
	
	<name>frontend</name>
	<creationDate>2015-12-01</creationDate>
	<author>Wanderson Marques / Victor Gonçalves / Otávio Calaça</author>
	<copyright>Copyright © 2015 ifg.edu.br</copyright>
	<authorEmail>wanderson.marques@ifg.edu.br</authorEmail>
	<authorUrl>http://www.ifg.edu.br</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[ 
		<h1>frontend</h1>
		<p>Localize Imóveis - Projeto de Pesquisa IFG.</p>
	]]></description>
	
	<files>
		<folder>css</folder>
