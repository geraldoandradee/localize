		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>logic.php</filename>
		<filename>offline.php</filename>
		<filename>runless.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions>
		<position>navbar</position>
		<position>breadcrumbs</position>
		<position>largebar</position>
		<position>sidebar</position>
		<position>debug</position>

		<position>logotipo</position>
		<position>menu</position>
		<position>mapa-home</position>
		<position>pesquisar</position>
	</positions>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="runless" type="radio" default="1" label="Run Less Compiler" description="">
